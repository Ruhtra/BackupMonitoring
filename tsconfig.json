{
  "compilerOptions": {
    "module": "ES2022",
    "target": "es6",
    "declaration": true,
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "backupmonitoring.shared/*": ["./backupMonitoring.Shared/src/*"],
      "backupmonitoring.backup/*": ["./backupMonitoring.Backup/src/*"]
    },
    "types": ["node"]
  },
  "include": [
    "backupMonitoring.Backup/src/**/*",
    "backupMonitoring.Shared/src/**/*",
    "backupMonitoring.App/src/**/*"
  ],
  "references": [
    { "path": "./backupMonitoring.Shared" },
    { "path": "./backupMonitoring.Backup" },
    { "path": "./backupMonitoring.App" }
  ]
}
