{
  "extends": ["../tsconfig.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "declaration": true, // Gera tipos (.d.ts)
    "declarationMap": true, // Gera mapa de tipos (.d.ts.map) para facilitar o debugging
    "outDir": "./dist", // Define o diretório de saída
    "types": [] // Pode adicionar tipos externos aqui, se necessário
  },
  "include": ["src/**/*.ts"]
}
