{
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "node16",
    "target": "ES2022",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".", // Base para resolução de módulos
    "paths": {
      "backupmonitoring.backup/*": ["backupmonitoring.backup/src/*"],
      "backupmonitoring.shared/*": ["backupmonitoring.shared/src/*"]
      // "backupmonitoring.app": ["backupmonitoring.app/src"], // Resolve o módulo
      // "backupmonitoring.backup/*": ["backupmonitoring.backup/src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
